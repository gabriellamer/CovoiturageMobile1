<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4B4B4B"
    android:orientation="vertical"
    android:padding="10dp" >

    <EditText
        android:id="@+id/search_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/description"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" >

        <requestFocus />
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <CheckBox
            android:id="@+id/search_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/man"
            android:textColor="#FFFFFF"/>

        <CheckBox
            android:id="@+id/search_woman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/woman"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <CheckBox
            android:id="@+id/search_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:id="@+id/search_passenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passenger"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" >

        <CheckBox
            android:id="@+id/search_air_conditionner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/heater"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:id="@+id/search_heater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/air_conditionner"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/search_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/range"
        android:textColor="#FFFFFF" />

    <SeekBar
        android:id="@+id/search_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="50"
        android:progress="25" />

    <TextView
        android:id="@+id/search_distance_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/search_btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="17dp"
        android:background="#55CB6A"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:text="@string/search_search" />

</LinearLayout>
